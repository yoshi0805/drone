<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='form-wrap'>

    <div class='form-group'>
      <div class="field">
        <%= f.label :ニックネーム %><br />
        <%= f.text_area :nickname, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class='form-group'>
      <div class="field">
        <%= f.label :Eメール %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class='form-group'>
      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class='form-group'>
      <div class="field">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class='form-group'>
      <div class="field">
        <%= f.label :苗字 %><br />
        <%= f.text_area :last_name, autocomplete: "last_name" %>
      </div>
    </div>
 
    <div class='form-group'>
      <div class="field">
        <%= f.label :名前%><br />
        <%= f.text_area :first_name, autocomplete: "first_name" %>
      </div>
    </div>

    <div class='form-group'>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birth_date,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>

    <div class='form-group'>
      <div class="field">
        <%= f.label :特技 %><br />
        <%= f.text_area :skill, autocomplete: "skill" %>
      </div>
    </div>

    <div class='form-group'>
      <div class="field">
        <%= f.label :拠点 %><br />
        <%= f.text_area :prefecture_id, autocomplete: "prefecture" %>
      </div>
    </div>

    <div class='form-group'>
      <div class="field">
        <%= f.label :機体 %><br />
        <%= f.text_area :airframe, autocomplete: "airframe" %>
      </div>
    </div>

    <div class='form-group'>
      <div class="field">
        <%= f.label :アピールポイント %><br />
        <%= f.text_area :introduction, autocomplete: "introduction" %>
      </div>
    </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
